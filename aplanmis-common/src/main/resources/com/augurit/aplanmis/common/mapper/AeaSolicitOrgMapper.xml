<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.augurit.aplanmis.common.mapper.AeaSolicitOrgMapper" >

    <!--1 返回所有字段的SQL字句 -->
    <sql id="allColumns" >
        SOLICIT_ORG_ID  solicitOrgId,
        ORG_ID  orgId,
        BUS_TYPE  busType,
        SOLICIT_TYPE  solicitType,
        CREATER  creater,
        CREATE_TIME  createTime,
        MODIFIER  modifier,
        MODIFY_TIME  modifyTime,
        ROOT_ORG_ID  rootOrgId
    </sql>

    <!--2 根据主键ID查询单个实体 -->
    <select id="getAeaSolicitOrgById" resultType="AeaSolicitOrg" >
        select
           <include refid="allColumns"/>
        from  AEA_SOLICIT_ORG
        where SOLICIT_ORG_ID = #{id}
    </select>

    <!--3 根据条件查询实体list -->
    <select id="listAeaSolicitOrg" resultType="AeaSolicitOrg" >
        select
           <include refid="allColumns"/>
        from    AEA_SOLICIT_ORG
        <where>
            <if test="solicitOrgId != null" >
            and    SOLICIT_ORG_ID = #{solicitOrgId}
            </if>
            <if test="orgId != null" >
            and    ORG_ID = #{orgId}
            </if>
            <if test="busType != null" >
            and    BUS_TYPE = #{busType}
            </if>
            <if test="solicitType != null" >
            and    SOLICIT_TYPE = #{solicitType}
            </if>
            <if test="creater != null" >
            and    CREATER = #{creater}
            </if>
            <if test="createTime != null" >
            and    CREATE_TIME = #{createTime}
            </if>
            <if test="modifier != null" >
            and    MODIFIER = #{modifier}
            </if>
            <if test="modifyTime != null" >
            and    MODIFY_TIME = #{modifyTime}
            </if>
            <if test="rootOrgId != null" >
            and    ROOT_ORG_ID = #{rootOrgId}
            </if>
        </where>
    </select>

    <!--5 新增实体对象 -->
    <insert id="insertAeaSolicitOrg" parameterType="AeaSolicitOrg" >
        insert into AEA_SOLICIT_ORG (
            SOLICIT_ORG_ID,
            ORG_ID,
            BUS_TYPE,
            SOLICIT_TYPE,
            CREATER,
            CREATE_TIME,
            MODIFIER,
            MODIFY_TIME,
            ROOT_ORG_ID
        )  values  (
            #{solicitOrgId},
            #{orgId},
            #{busType},
            #{solicitType},
            #{creater},
            #{createTime},
            #{modifier},
            #{modifyTime},
            #{rootOrgId}
        )
    </insert>

    <!--6 修改实体对象 -->
    <update id="updateAeaSolicitOrg" parameterType="AeaSolicitOrg" >
        update AEA_SOLICIT_ORG
        <set >
            <if test="solicitOrgId != null" >
            SOLICIT_ORG_ID = #{solicitOrgId},
            </if>
            <if test="orgId != null" >
            ORG_ID = #{orgId},
            </if>
            <if test="busType != null" >
            BUS_TYPE = #{busType},
            </if>
            <if test="solicitType != null" >
            SOLICIT_TYPE = #{solicitType},
            </if>
            <if test="creater != null" >
            CREATER = #{creater},
            </if>
            <if test="createTime != null" >
            CREATE_TIME = #{createTime},
            </if>
            <if test="modifier != null" >
            MODIFIER = #{modifier},
            </if>
            <if test="modifyTime != null" >
            MODIFY_TIME = #{modifyTime},
            </if>
            <if test="rootOrgId != null" >
            ROOT_ORG_ID = #{rootOrgId},
            </if>
        </set>
        where SOLICIT_ORG_ID = #{solicitOrgId}
    </update>

    <delete id="deleteAeaSolicitOrg">
        delete from AEA_SOLICIT_ORG where SOLICIT_ORG_ID = #{id}
    </delete>

    <resultMap type="AeaSolicitOrg" id="AeaSolicitOrgMap">
        <id property="solicitOrgId" column="SOLICIT_ORG_ID"/>
        <result property="orgId" column="ORG_ID"/>
        <result property="busType" column="BUS_TYPE"/>
        <result property="solicitType" column="SOLICIT_TYPE"/>
        <result property="creater" column="CREATER"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifier" column="MODIFIER"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
        <result property="rootOrgId" column="ROOT_ORG_ID"/>
    </resultMap>

</mapper>