<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- 一些前置信息配置 -->
<mapper namespace="com.augurit.aplanmis.common.mapper.AeaSolicitItemMapper" >

    <sql id="allColumns" >
        SOLICIT_ITEM_ID  solicitItemId,
        ITEM_ID  itemId,
        ITEM_VER_ID  itemVerId,
        SOLICIT_TYPE  solicitType,
        CREATER  creater,
        CREATE_TIME  createTime,
        MODIFIER  modifier,
        MODIFY_TIME  modifyTime,
        ROOT_ORG_ID  rootOrgId
    </sql>

    <!--2 根据主键ID查询单个实体 -->
    <select id="getAeaSolicitItemById" resultType="AeaSolicitItem" >
        select
          <include refid="allColumns"/>
        from    AEA_SOLICIT_ITEM
        where    SOLICIT_ITEM_ID = #{id}
    </select>

    <!--3 根据条件查询实体list -->
    <select id="listAeaSolicitItem" resultType="AeaSolicitItem" >
        select
        <include refid="allColumns"/>
        from    AEA_SOLICIT_ITEM
        <where>
            <if test="solicitItemId != null" >
            and    SOLICIT_ITEM_ID = #{solicitItemId}
            </if>
            <if test="itemId != null" >
            and    ITEM_ID = #{itemId}
            </if>
            <if test="itemVerId != null" >
            and    ITEM_VER_ID = #{itemVerId}
            </if>
            <if test="solicitType != null" >
            and    SOLICIT_TYPE = #{solicitType}
            </if>
            <if test="creater != null" >
            and    CREATER = #{creater}
            </if>
            <if test="createTime != null" >
            and    CREATE_TIME = #{createTime}
            </if>
            <if test="modifier != null" >
            and    MODIFIER = #{modifier}
            </if>
            <if test="modifyTime != null" >
            and    MODIFY_TIME = #{modifyTime}
            </if>
            <if test="rootOrgId != null" >
            and    ROOT_ORG_ID = #{rootOrgId}
            </if>
        </where>
    </select>

    <!--5 新增实体对象 -->
    <insert id="insertAeaSolicitItem" parameterType="AeaSolicitItem" >
        insert into AEA_SOLICIT_ITEM (
            SOLICIT_ITEM_ID,
            ITEM_ID,
            ITEM_VER_ID,
            SOLICIT_TYPE,
            CREATER,
            CREATE_TIME,
            MODIFIER,
            MODIFY_TIME,
            ROOT_ORG_ID
        )  values  (
            #{solicitItemId},
            #{itemId},
            #{itemVerId},
            #{solicitType},
            #{creater},
            #{createTime},
            #{modifier},
            #{modifyTime},
            #{rootOrgId}
        )
    </insert>

    <!--6 修改实体对象 -->
    <update id="updateAeaSolicitItem" parameterType="AeaSolicitItem" >
        update AEA_SOLICIT_ITEM
        <set >
            <if test="solicitItemId != null" >
            SOLICIT_ITEM_ID = #{solicitItemId},
            </if>
            <if test="itemId != null" >
            ITEM_ID = #{itemId},
            </if>
            <if test="itemVerId != null" >
            ITEM_VER_ID = #{itemVerId},
            </if>
            <if test="solicitType != null" >
            SOLICIT_TYPE = #{solicitType},
            </if>
            <if test="creater != null" >
            CREATER = #{creater},
            </if>
            <if test="createTime != null" >
            CREATE_TIME = #{createTime},
            </if>
            <if test="modifier != null" >
            MODIFIER = #{modifier},
            </if>
            <if test="modifyTime != null" >
            MODIFY_TIME = #{modifyTime},
            </if>
            <if test="rootOrgId != null" >
            ROOT_ORG_ID = #{rootOrgId},
            </if>
        </set>
        where SOLICIT_ITEM_ID = #{solicitItemId}
    </update>

    <!--7 删除实体对象,根据主键ID -->
    <delete id="deleteAeaSolicitItem">
        delete from AEA_SOLICIT_ITEM where SOLICIT_ITEM_ID = #{id}
    </delete>

    <resultMap type="AeaSolicitItem" id="AeaSolicitItemMap">
        <id property="solicitItemId" column="SOLICIT_ITEM_ID"/>
        <result property="itemId" column="ITEM_ID"/>
        <result property="itemVerId" column="ITEM_VER_ID"/>
        <result property="solicitType" column="SOLICIT_TYPE"/>
        <result property="creater" column="CREATER"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifier" column="MODIFIER"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
        <result property="rootOrgId" column="ROOT_ORG_ID"/>
    </resultMap>

</mapper>