<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!--0 一些前置信息配置 -->
<mapper namespace="com.augurit.aplanmis.common.mapper.AeaItemUserMapper">

    <!--1 返回所有字段的SQL字句 -->
    <sql id="allColumns" >
        ITEM_USER_ID  itemUserId,
        ITEM_VER_ID  itemVerId,
        USER_ID  userId,
        IS_ACTIVE  isActive,
        CREATER  creater,
        CREATE_TIME  createTime,
        ROOT_ORG_ID  rootOrgId
    </sql>

    <!--2 根据主键ID查询单个实体 -->
    <select id="getAeaItemUserById" resultType="AeaItemUser" >
        select
            <include refid="allColumns"/>
        from  AEA_ITEM_USER
        where ITEM_USER_ID = #{id}
    </select>

    <!--3 根据条件查询实体list -->
    <select id="listAeaItemUser" resultType="AeaItemUser" >
        select
            <include refid="allColumns"/>
        from AEA_ITEM_USER
        <where>
            <if test="itemUserId != null" >
            and     ITEM_USER_ID = #{itemUserId}
            </if>
            <if test="itemVerId != null" >
            and     ITEM_VER_ID = #{itemVerId}
            </if>
            <if test="userId != null" >
            and     USER_ID = #{userId}
            </if>
            <if test="isActive != null" >
            and     IS_ACTIVE = #{isActive}
            </if>
            <if test="creater != null" >
            and     CREATER = #{creater}
            </if>
            <if test="createTime != null" >
            and     CREATE_TIME = #{createTime}
            </if>
            <if test="rootOrgId != null" >
            and     ROOT_ORG_ID = #{rootOrgId}
            </if>
        </where>
    </select>

    <!--5 新增实体对象 -->
    <insert id="insertAeaItemUser" parameterType="AeaItemUser" >
        insert into AEA_ITEM_USER
        (
            ITEM_USER_ID,
            ITEM_VER_ID,
            USER_ID,
            IS_ACTIVE,
            CREATER,
            CREATE_TIME,
            ROOT_ORG_ID
        )
        values
        (
            #{itemUserId},
            #{itemVerId},
            #{userId},
            #{isActive},
            #{creater},
            #{createTime},
            #{rootOrgId}
        )
    </insert>

    <!--6 修改实体对象 -->
    <update id="updateAeaItemUser" parameterType="AeaItemUser" >
        update AEA_ITEM_USER
        <set >
            <if test="itemUserId != null" >
            ITEM_USER_ID = #{itemUserId},
            </if>
            <if test="itemVerId != null" >
            ITEM_VER_ID = #{itemVerId},
            </if>
            <if test="userId != null" >
            USER_ID = #{userId},
            </if>
            <if test="isActive != null" >
            IS_ACTIVE = #{isActive},
            </if>
            <if test="creater != null" >
            CREATER = #{creater},
            </if>
            <if test="createTime != null" >
            CREATE_TIME = #{createTime},
            </if>
            <if test="rootOrgId != null" >
            ROOT_ORG_ID = #{rootOrgId},
            </if>
        </set>
        where ITEM_USER_ID = #{itemUserId}
    </update>

    <delete id="deleteAeaItemUser">
        delete from  AEA_ITEM_USER where ITEM_USER_ID = #{id}
    </delete>

    <resultMap type="AeaItemUser" id="AeaItemUserMap">
        <id property="itemUserId" column="ITEM_USER_ID"/>
        <result property="itemVerId" column="ITEM_VER_ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="isActive" column="IS_ACTIVE"/>
        <result property="creater" column="CREATER"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="rootOrgId" column="ROOT_ORG_ID"/>
    </resultMap>

</mapper>